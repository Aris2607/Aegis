@using AegisTest.Dtos
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h2>Order Report</h2>
    <table id="orderTable" class="order-table">
        <thead>
            <tr>
                <th>Order ID</th>
                <th>Customer</th>
                <th>Email</th>
                <th>Product</th>
                <th>Price</th>
                <th>Qty</th>
                <th>Total</th>
                <th>Date</th>
            </tr>
        </thead>
        <tbody class="order-table">
        </tbody>
    </table>

    <a class="btn btn-primary mt-3" href="/home/export/excel">Export to Excel</a>
    <a class="btn btn-primary mt-3" href="/home/export/pdf">Export to PDF</a>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.7/js/jquery.dataTables.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#orderTable').DataTable({
                "ajax": {
                    "url": "@Url.Action("GetOrders", "Home")",
                    "dataSrc": ""
                },
                "columns": [
                    { "data": "orderId" },
                    { "data": "customerName" },
                    { "data": "email" },
                    { "data": "productName" },
                    {
                        "data": "price",
                        "render": function (data) {
                            return data.toLocaleString('id-ID', { style: 'currency', currency: 'IDR' });
                        }
                    },
                    { "data": "quantity" },
                    {
                        "data": null,
                        "render": function (data) {
                            var total = data.price * data.quantity;
                            return total.toLocaleString('id-ID', { style: 'currency', currency: 'IDR' });
                        }
                    },
                    {
                        "data": "orderDate",
                        "render": function (data) {
                            return new Date(data).toLocaleDateString('id-ID');
                        }
                    }
                ],
                "searching": false,
                "ordering": false,
                "paging": false,
                "info": false,
            });
        });
    </script>
}

<style>
.order-table {
    width: 90%;
    margin: 30px auto;
    border-collapse: collapse;
    font-family: 'Segoe UI', Arial, sans-serif;
    background: #fff;
    box-shadow: 0 2px 8px rgba(0,0,0,0.08);
}
.order-table th, .order-table td {
    border: 1px solid #e0e0e0;
    padding: 10px 14px;
    text-align: center;
}
.order-table th {
    background: #1976d2;
    color: #fff;
    font-weight: 600;
    letter-spacing: 1px;
}
.order-table tr:nth-child(even) {
    background: #f5f7fa;
}
.order-table tr:hover {
    background: #e3f2fd;
    transition: background 0.2s;
}
</style>
